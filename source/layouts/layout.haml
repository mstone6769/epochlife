:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "ZURB Foundation"
    / Included CSS Files
    = stylesheet_link_tag "app"
    = stylesheet_link_tag "fc-webicons.css"
    = javascript_include_tag "foundation/modernizr.foundation"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
    = javascript_include_tag "jquery.scrollTo-1.4.3.1-min.js"
    //= javascript_include_tag "jquery.localscroll-1.2.7-min.js"
    = javascript_include_tag "//use.typekit.net/ylh2fci.js"
    %script{:type=>"text/javascript"}
      try{Typekit.load();}catch(e){}
    :javascript
      $(document).ready(function(){
        $(window)._scrollable(); 
        $('#arrow-down').click(function(){
          $(window).scrollTo("#feed", 2000);
        });
      
      });

    
  %body{:class => page_classes}
    = yield
    / Application Javascript, safe to override
    = javascript_include_tag "app"